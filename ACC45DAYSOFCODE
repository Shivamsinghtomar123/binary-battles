#include <iostream>
using namespace std;

int main() {
    int T;
    cin>>T;
    while(T--){
   int  N,A,B;
        cin>>N>>A>>B;
        int sum=0;
        while(N--){
            sum+=A;
            
            sum+=B;
          
             N=N/2;
        }
        cout<<(sum-B)<<endl;
    }

	return 0;
}
